@model CategorySaleReport

@{
    ViewData["Title"] = "Category Sale Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5>@ViewData["Title"]</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="PrintReview" class="form-horizontal">
                            <div class="form-group row">
                                <label asp-for="FromDateTime" class="col-6 col-form-label"></label>
                                <div class="col-6">
                                    <input asp-for="FromDateTime" type="date" class="form-control" id="inputServer">
                                    <span asp-validation-for="FromDateTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="ToDateTime" class="col-6 col-form-label"></label>
                                <div class="col-6">
                                    <input asp-for="ToDateTime" type="date" class="form-control" id="inputServer">
                                    <span asp-validation-for="ToDateTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Location" class="col-6 col-form-label"></label>
                                <div class="col-6">
                                    <select asp-for="Location" asp-items="ViewBag.LocationList" class="form-control form-select" style="width: 100%">
                                        <option value="All">Select All</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="POSId" class="col-6 col-form-label"></label>
                                <div class="col-6">
                                    <select asp-for="POSId" asp-items="ViewBag.POSIdList" class="form-control form-select" style="width: 100%">
                                        <option value="All">Select All</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="ShiftNo" class="col-6 col-form-label"></label>
                                <div class="col-6">
                                    <input asp-for="ShiftNo" class="form-control" min="0" id="inputDatabase">
                                    <span asp-validation-for="ShiftNo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="CategoryCode" class="col-6 col-form-label"></label>
                                <div class="col-6">
                                    <select asp-for="CategoryCode" asp-items="ViewBag.CategoryList" class="form-control form-select" multiple="multiple" size="3" style="width: 100%">
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-info">Print Report</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>



