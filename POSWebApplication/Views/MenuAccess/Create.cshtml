@model MenuAccessModelList

@{
    ViewData["Title"] = "Create Menu Access";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    <div id="messageBox" class="alert alert-danger @((ViewBag.AlertMessage != null) ? "" : "d-none")" role="alert">
        @ViewBag.AlertMessage
    </div>
</div>
<div class="container-fluid">
    <div class="mb-1">
        <a class="btn btn-info" asp-action="Index">Back To List</a>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title ">Create User Menu Access</h3>
        </div>
        <form asp-action="Create" class="form-horizontal">
            <div class="card-body">
                <div class="col-md-6 row">
                    <div class="form-group row">
                        <label class="col-sm-6 col-form-label">Menu Group</label>
                        <div class="col-sm-6">
                            <select asp-for="MenuAccess.MnuGrpId" class="form-control form-select">
                                @foreach (var item in Model.UserMenuGroupList)
                                {
                                    <option value="@item.MnuGrpId">@item.MnuGrpNme</option>
                                }
                            </select>
                            <span asp-validation-for="MenuAccess.MnuGrpId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="MenuAccess.AccLevel" class="col-sm-6 col-form-label">Account Level</label>
                        <div class="col-sm-6">
                            <select asp-for="MenuAccess.AccLevel" class="form-control form-select">
                                <option value="0">Disable</option>
                                <option value="1">Read</option>
                                <option value="2">Read/Write</option>
                            </select>
                            <span asp-validation-for="MenuAccess.AccLevel" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info">Create</button>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#messageBox").fadeOut();
        }, 5000);
    });
</script>


