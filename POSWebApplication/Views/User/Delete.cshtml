@model UserModelList

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="mb-1">
        <a class="btn btn-info"  asp-action="Index">Back To List</a>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title ">Are you sure you want to delete this?</h3>
        </div>
        <form asp-action="Delete" class="form-horizontal">
            <div class="card-body">
                <div class="col-md-6 row">
                    <div class="form-group row">
                        <label asp-for="User.UserId" class="col-sm-6 col-form-label">User Id</label>
                        <div class="col-sm-6">
                            <input asp-for="User.UserId" type="text" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="User.UserCde" class="col-sm-6 col-form-label">User Code</label>
                        <div class="col-sm-6">
                            <input asp-for="User.UserCde" type="text" class="form-control" id="inputServer" placeholder="User Code" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="User.UserNme" class="col-sm-6 col-form-label">UserName</label>
                        <div class="col-sm-6">
                            <input asp-for="User.UserNme" type="text" class="form-control" id="inputServer" placeholder="UserName" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="User.POSid" class="col-sm-6 col-form-label">POS ID</label>
                        <div class="col-sm-6">
                            <input asp-for="User.POSid" type="text" class="form-control" id="inputDatabase" placeholder="POS" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-6 col-form-label">Menu Group</label>
                        <div class="col-sm-6">
                            <select asp-for="User.MnuGrpId" class="form-control" disabled>
                                @foreach (var item in Model.UserMenuGroupList)
                                {
                                    <option value="@item.MnuGrpId">@item.MnuGrpNme</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#messageBox").fadeOut();
        }, 5000);
    });
</script>


