@model LocationModelList
<form asp-action="Edit" asp-controller="Location">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title" id="popupDialogLabel">Update Location</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="text-md-center">
                        <tr style="font-size: 14px">
                            <th style="text-align: left;width: 160px">
                                @Html.DisplayNameFor(model => model.Location.LocCde)
                            </th>
                            <th style="text-align: left">
                                <span style="color: red">*&nbsp;</span>@Html.DisplayNameFor(model => model.Location.LocDesc)
                            </th>
                            <th style="width: 80px">
                                <span style="color: red">*&nbsp;</span>@Html.DisplayNameFor(model => model.Location.IsOutlet)
                            </th>
                        </tr>
                    </thead>
                    <tbody class="text-md-center">
                        <tr style="font-size: 12px">
                            <td>
                                <input asp-for="@Model.Location.LocCde" class="form-control form-control-sm" readonly/>
                            </td>
                            <td>
                                <input asp-for="@Model.Location.LocDesc" class="form-control form-control-sm" />
                            </td>
                            <td>
                                <div class="form-check">
                                    <input type="checkbox" asp-for="@Model.Location.IsOutlet" class="form-check-input" style="width: 20px;height: 20px">
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" onclick="cleanDefaultContainer()">Close</button>
            <button type="submit" class="btn btn-info">Save changes</button>
        </div>
    </div>
</form>
